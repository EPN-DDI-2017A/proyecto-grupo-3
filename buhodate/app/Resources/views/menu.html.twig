<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}BuhoDate | ESFOT{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
        <link href="https://fonts.googleapis.com/css?family=Didact+Gothic|Parisienne" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('css/font-awesome.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% endblock %}
</head>
<body>
<div class="container">
    {#MENU PRINCIPAL#}
    <div class="row" id="menuprincipal">
        <div class=" col col-lg-4 col-md-3 col-sm-12">
            <a href="{{ path('usuario_index') }}"><img class="logo" src="{{ asset('image/logo1.png') }}" alt="logo buho"></a>
        </div>
        <div class="col col-lg-8 col-md-9 col-sm-12" id="pest">
            <ul class="nav" id="perfil-menu">
                <li class="nav-item">
                    <a class="nav-link active" href="{{ path('usuario_index') }}">Inicio</a>
                </li>
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED")  %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('usuario_show', { 'id': app.user.id }) }}">Perfil</a>
                </li>
                {% endif %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('cita_index') }}">Citas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Notificaciones</a>
                </li>
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('fos_user_security_logout') }}">Salir</a>
                </li>
                {% endif %}
            </ul>
        </div>
    </div>

    {% block body %}{% endblock %}

</div>
<div class="container">
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-8 text-muted">
                    <p><strong>BuhoDate</strong> Copyright: Â© 2017. Todos los derechos reservados.</p>
                </div>
                <div class="col-4" id="foot_SN">
                    <a href=""><i class="fa fa-facebook" aria-hidden="true"></i></a>
                    <a href=""><i class="fa fa-instagram" aria-hidden="true"></i></a>
                    <a href=""><i class="fa fa-twitter" aria-hidden="true"></i></a>
                    <a href=""><i class="fa fa-google-plus" aria-hidden="true"></i></a>
                </div>
            </div>
        </div>
    </footer>
</div>
{% block javascripts %}
    <script src="{{ asset('js/jquery-3.2.1.min.js') }}"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
    <script src="{{ asset('js/jquery.validate.min.js') }}"></script>
    <script src="{{ asset('js/localization/messages_es.js') }}"></script>
    <script src="{{ asset('js/additional-methods.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.js') }}"></script>
    <script src="{{ asset('js/script.js') }}"></script>
    <script src="{{ asset('js/main.js') }}"></script>
{% endblock %}
</body>
</html>
